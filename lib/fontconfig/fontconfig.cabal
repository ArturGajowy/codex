cabal-version: 2.2
name: fontconfig
version: 0
synopsis: Minimal bindings for fontconfig
description: Minimal bindings for fontconfig
homepage: https://github.com/ekmett/ui#readme
license: BSD-2-Clause OR Apache-2.0
license-file: LICENSE.md
author: Edward Kmett
maintainer: Edward Kmett <ekmett@gmail.com>
copyright: Copyright (c) 2019 Edward Kmett
stability: experimental
category: Graphics
build-type: Simple
extra-doc-files:
  README.md,
  CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/ekmett/ui

common base
  default-language: Haskell2010
  -- may work as low as 2.5.1, untested
  pkgconfig-depends: fontconfig >= 2.13
  extra-libraries: fontconfig
  ghc-options:
    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities -Wmissing-export-lists
  build-depends:
    base >= 4.11 && < 5,
    data-default,
    inline-c

-- There appears to be a pretty harsh phase separation required by my mix of hsc2hs and template-haskell
library internal
  import: base
  hs-source-dirs: raw
  build-tool-depends: hsc2hs:hsc2hs
  build-depends:
    containers >= 0.6,
    template-haskell
  exposed-modules: Font.Config.Internal

library
  import: base
  hs-source-dirs: src
  build-depends:
    internal,
    StateVar,
    transformers
  exposed-modules: Font.Config
  reexported-modules: Font.Config.Internal
