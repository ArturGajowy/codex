cabal-version: 2.2
name: const
version: 0
synopsis: Constant pointers
description: Constant pointers
homepage: https://github.com/ekmett/ui#readme
license: BSD-2-Clause OR Apache-2.0
license-file: LICENSE.md
author: Edward Kmett
maintainer: Edward Kmett <ekmett@gmail.com>
copyright: Copyright (c) 2019 Edward Kmett
stability: experimental
category: FFI
build-type: Simple
extra-doc-files:
  README.md,
  CHANGELOG.md
  TODO.md

source-repository head
  type: git
  location: https://github.com/ekmett/ui

library
  hs-source-dirs: src
  default-language: Haskell2010
  ghc-options:
    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities -Wmissing-export-lists
  build-depends: base >= 4.11 && < 5
  other-modules:
    Foreign.Const.Internal
  exposed-modules:
    Foreign.Const
    Foreign.Const.ForeignPtr
    Foreign.Const.Ptr
    Foreign.Const.Unsafe
