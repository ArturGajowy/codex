cabal-version: 2.2
name: glow
version: 0
synopsis: Low-level wrappings around the 'gl' library
description: Low-level wrappings around the 'gl' library.
homepage: https://github.com/ekmett/ui#readme
license: BSD-2-Clause OR Apache-2.0
license-file: LICENSE.md
author: Edward Kmett
maintainer: Edward Kmett <ekmett@gmail.com>
copyright: Copyright (c) 2019 Edward Kmett
stability: experimental
category: Graphics
build-type: Simple
extra-doc-files:
  README.md,
  CHANGELOG.md

source-repository head
  type: git
  location: https://github.com/ekmett/ui

library
  hs-source-dirs: src
  build-depends: base >= 4.11 && < 5
  default-language: Haskell2010
  ghc-options:
    -Wall -Wincomplete-uni-patterns -Wincomplete-record-updates
    -Wredundant-constraints -Widentities -Wmissing-export-lists
  build-depends:
    adjunctions,
    bytestring,
    containers,
    data-default,
    distributive,
    JuicyPixels,
    gl,
    lens,
    linear,
    mtl,
    primitive,
    StateVar,
    transformers,
    vector

  exposed-modules:
    Glow
    Glow.Attribute
    Glow.Block
    Glow.Buffer
    Glow.Draw
    Glow.Error
    Glow.Framebuffer
    Glow.Image
    Glow.Object
    Glow.Pixel
    Glow.Program
    Glow.ProgramPipeline
    Glow.Renderbuffer
    Glow.Sampler
    Glow.Shader
    Glow.Texture
    Glow.Types
    Glow.Uniform
    Glow.Version
    Glow.VertexArray
